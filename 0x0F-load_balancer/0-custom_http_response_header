#!/usr/bin/env bash

# Update package information
sudo apt-get -y update

# Install Nginx
sudo apt-get -y install nginx

# Define the custom header configuration
custom_header_config="add_header X-Served-By \$hostname;"

# Add the custom header configuration to the Nginx default site configuration
sudo sed -i "/server_name _;/a \\\t$custom_header_config" /etc/nginx/sites-available/default

# Restart Nginx to apply the changes
sudo service nginx restart
